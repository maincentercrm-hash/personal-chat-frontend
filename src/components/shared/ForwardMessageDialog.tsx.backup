// src/components/shared/ForwardMessageDialog.tsx
// Dialog for selecting conversations to forward messages to

import { useState, useMemo, useEffect } from 'react';
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogFooter,
} from '@/components/ui/dialog';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Checkbox } from '@/components/ui/checkbox';
import { ScrollArea } from '@/components/ui/scroll-area';
import { forwardService } from '@/services/forwardService';
import { useConversationStore } from '@/stores/conversationStore';
import { toast } from 'sonner';
import type { ConversationDTO } from '@/types/conversation.types';
import { Search, Users, User } from 'lucide-react';

interface ForwardMessageDialogProps {
  open: boolean;
  onOpenChange: (open: boolean) => void;
  messageIds: string[]; // Messages to forward
  onSuccess?: () => void;
}

/**
 * ForwardMessageDialog Component
 *
 * Allows users to select one or more conversations to forward messages to.
 *
 * Features:
 * - Search conversations by name/username
 * - Multi-select conversations
 * - Shows recent conversations first
 * - Loading state during forward operation
 * - Success/error feedback
 *
 * Usage:
 * <ForwardMessageDialog
 *   open={showDialog}
 *   onOpenChange={setShowDialog}
 *   messageIds={['msg-1']}
 *   onSuccess={() => console.log('Forwarded!')}
 * />
 */
export default function ForwardMessageDialog({
  open,
  onOpenChange,
  messageIds,
  onSuccess
}: ForwardMessageDialogProps) {
  const [searchQuery, setSearchQuery] = useState('');
  const [selectedConversations, setSelectedConversations] = useState<string[]>([]);
  const [loading, setLoading] = useState(false);

  const { conversations } = useConversationStore();

  // Sort conversations by recent activity (most recent first)
  const sortedConversations = useMemo(() => {
    return [...conversations].sort((a, b) => {
      const aTime = new Date(a.last_message?.created_at || 0).getTime();
      const bTime = new Date(b.last_message?.created_at || 0).getTime();
      return bTime - aTime; // Most recent first
    });
  }, [conversations]);

  // Filter conversations based on search query
  const filteredConversations = useMemo(() => {
    if (!searchQuery.trim()) return sortedConversations;

    const query = searchQuery.toLowerCase().trim();
    return sortedConversations.filter((conv) => {
      const title = conv.title?.toLowerCase() || '';
      const username = conv.other_user?.username?.toLowerCase() || '';
      const displayName = conv.other_user?.display_name?.toLowerCase() || '';

      return (
        title.includes(query) ||
        username.includes(query) ||
        displayName.includes(query)
      );
    });
  }, [sortedConversations, searchQuery]);

  // Toggle conversation selection
  const handleToggleConversation = (conversationId: string) => {
    setSelectedConversations((prev) =>
      prev.includes(conversationId)
        ? prev.filter((id) => id !== conversationId)
        : [...prev, conversationId]
    );
  };

  // Forward messages to selected conversations
  const handleForward = async () => {
    if (selectedConversations.length === 0) {
      toast.error('Please select at least one conversation');
      return;
    }

    console.log('[ForwardDialog] ðŸš€ Starting forward process...');
    setLoading(true);

    try {
      console.log('[ForwardDialog] ðŸ“¤ Sending request:', {
        messageIds,
        selectedConversations
      });

      const result = await forwardService.forwardMessages(
        messageIds,
        selectedConversations
      );

      console.log('[ForwardDialog] âœ… Result received:', result);

      // Safely get forwarded count
      const totalForwarded = result?.forwarded_messages?.length || 0;

      toast.success(
        `Forwarded ${messageIds.length} message${messageIds.length > 1 ? 's' : ''} to ${selectedConversations.length} conversation${selectedConversations.length > 1 ? 's' : ''}`
      );

      console.log('[ForwardDialog] ðŸŽ‰ Forward success!', {
        totalForwarded,
        selectedConversations: selectedConversations.length
      });

      // Always call success callback and close
      onSuccess?.();
      handleClose();
    } catch (error) {
      console.error('[ForwardDialog] âŒ Forward error:', error);

      // More detailed error message
      const errorMessage = error instanceof Error
        ? error.message
        : 'Failed to forward messages. Please try again.';

      toast.error(errorMessage);

      // Close dialog even on error
      handleClose();
    } finally {
      console.log('[ForwardDialog] ðŸ”„ Cleaning up...');
      setLoading(false);
    }
  };

  // Close dialog and reset state
  const handleClose = () => {
    console.log('[ForwardDialog] ðŸšª Closing dialog...');

    // Reset all state
    setSelectedConversations([]);
    setSearchQuery('');
    setLoading(false);

    // Close dialog
    onOpenChange(false);

    console.log('[ForwardDialog] âœ… Dialog closed');
  };

  // Get conversation display name
  const getConversationName = (conversation: ConversationDTO): string => {
    if (conversation.type === 'group') {
      return conversation.title || 'Unnamed Group';
    }
    return conversation.other_user?.display_name || conversation.other_user?.username || 'Unknown';
  };

  // Get conversation subtitle (member count for groups)
  const getConversationSubtitle = (conversation: ConversationDTO): string | null => {
    if (conversation.type === 'group' && conversation.members) {
      const count = conversation.members.length;
      return `${count} member${count > 1 ? 's' : ''}`;
    }
    return null;
  };

  return (
    <Dialog open={open} onOpenChange={handleClose}>
      <DialogContent className="max-w-md">
        <DialogHeader>
          <DialogTitle>
            Forward {messageIds.length} message{messageIds.length > 1 ? 's' : ''}
          </DialogTitle>
        </DialogHeader>

        {/* Search Input */}
        <div className="py-4">
          <div className="relative">
            <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
            <Input
              placeholder="Search conversations..."
              value={searchQuery}
              onChange={(e) => setSearchQuery(e.target.value)}
              className="pl-9"
            />
          </div>
        </div>

        {/* Conversation List */}
        <ScrollArea className="h-[300px] border rounded-md">
          {filteredConversations.length === 0 ? (
            <div className="text-center text-muted-foreground py-8 px-4">
              {searchQuery ? 'No conversations found' : 'No conversations available'}
            </div>
          ) : (
            <div className="p-2">
              {filteredConversations.map((conversation) => {
                const isSelected = selectedConversations.includes(conversation.id);
                const name = getConversationName(conversation);
                const subtitle = getConversationSubtitle(conversation);

                return (
                  <div
                    key={conversation.id}
                    className={`
                      flex items-center gap-3 p-3 rounded-md cursor-pointer
                      transition-colors duration-150
                      ${isSelected ? 'bg-accent' : 'hover:bg-accent/50'}
                    `}
                    onClick={() => handleToggleConversation(conversation.id)}
                  >
                    {/* Checkbox */}
                    <Checkbox
                      checked={isSelected}
                      onCheckedChange={() => handleToggleConversation(conversation.id)}
                      onClick={(e) => e.stopPropagation()}
                    />

                    {/* Avatar Icon */}
                    <div className="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                      {conversation.type === 'group' ? (
                        <Users className="h-5 w-5 text-primary" />
                      ) : (
                        <User className="h-5 w-5 text-primary" />
                      )}
                    </div>

                    {/* Conversation Info */}
                    <div className="flex-1 min-w-0">
                      <div className="font-medium truncate">{name}</div>
                      {subtitle && (
                        <div className="text-xs text-muted-foreground">{subtitle}</div>
                      )}
                    </div>
                  </div>
                );
              })}
            </div>
          )}
        </ScrollArea>

        {/* Selected Count */}
        {selectedConversations.length > 0 && (
          <div className="text-sm text-muted-foreground">
            {selectedConversations.length} conversation{selectedConversations.length > 1 ? 's' : ''} selected
          </div>
        )}

        <DialogFooter>
          <Button variant="outline" onClick={handleClose} disabled={loading}>
            Cancel
          </Button>
          <Button
            onClick={handleForward}
            disabled={selectedConversations.length === 0 || loading}
          >
            {loading
              ? 'Forwarding...'
              : `Forward${selectedConversations.length > 0 ? ` (${selectedConversations.length})` : ''}`}
          </Button>
        </DialogFooter>
      </DialogContent>
    </Dialog>
  );
}
